{
  "manifest_version": "0.2",
  "name": "lit-lake",
  "version": "0.1.0",
  "description": "A MCP to connect your reference managers to Claude",
  "author": {
    "name": "Elliot Roe",
    "url": "https://github.com/ElliotRoe"
  },
  "server": {
    "type": "binary",
    "entry_point": "lit-lake-mcp",
    "mcp_config": {
      "command": "${__dirname}/lit-lake-mcp",
      "args": [],
      "env": {
        "ZOTERO_DB_PATH": "${user_config.z_db}",
        "DB_PATH": "${HOME}/lit_lake.db",
        "GEMINI_API_KEY": "${user_config.gemini_api_key}"
      },
      "platform_overrides": {
        "win32": {
          "command": "${__dirname}/lit-lake-mcp.exe"
        }
      }
    }
  },
  "user_config": {
    "z_db": {
      "type": "file",
      "title": "Zotero DB",
      "description": "The path to the Zotero db file (Optional: defaults to ~/Zotero/zotero.sqlite)",
      "required": false,
      "sensitive": false
    },
    "gemini_api_key": {
      "type": "string",
      "title": "Gemini API Key",
      "description": "Your Gemini API key to power extraction agents. If not provided, extraction features are disabled",
      "required": false,
      "sensitive": true
    }
  },
  "license": "MIT"
}
